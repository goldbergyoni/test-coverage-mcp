{
  "name": "coverage-mcp",
  "version": "1.0.0",
  "description": "MCP server for analyzing test coverage from LCOV files",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "coverage-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "keywords": [
    "mcp",
    "coverage",
    "lcov",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@friedemannsommer/lcov-parser": "5.0.1",
    "@modelcontextprotocol/sdk": "1.20.2",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@faker-js/faker": "^10.1.0",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "^4.0.3",
    "eslint": "9.38.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "4.0.3"
  }
}
